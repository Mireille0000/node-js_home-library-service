generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id String @id @default(uuid())
    login String
    password String
    version Int
    createdAt Int
    updatedAt Int
}

model Artist {
  id String @id @default(uuid())
  name String
  grammy Boolean

  // Favorites Favorites[] @relation(name: "Artist")
}

model Track {
  id String @id @default(uuid())
  name String
  artistId String @default(uuid())
  albumId String @default(uuid())
  duration Int

  // Favorites Favorites[] @relation(name: "Track")
}

model Album {
  id String @id @default(uuid())
  name String
  year String
  artistId String @default(uuid())

  // Favorites Favorites[] @relation(name: "Album")
}

